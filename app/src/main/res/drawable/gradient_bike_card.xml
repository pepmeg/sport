<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="16dp" /> <!-- Закруглённые углы -->
            <solid android:color="#2A3554" /> <!-- Тёмно-синий цвет -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp" /> <!-- Закруглённые углы -->
            <gradient
                android:startColor="#34C8E8"
                android:endColor="#4E4AF2"
                android:angle="45" /> <!-- Градиент от голубого к синему -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#80000000"
                android:endColor="#00000000"
                android:angle="270" /> <!-- Прозрачный градиент -->
        </shape>
    </item>
</layer-list>